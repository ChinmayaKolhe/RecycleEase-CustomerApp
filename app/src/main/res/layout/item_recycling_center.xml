<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:backgroundTint="#5FCAB3B3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground">

        <!-- Recycling Center Name -->
        <TextView
            android:id="@+id/tvCenterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recycling Centers "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/green"
            android:layout_marginBottom="8dp"/>

        <!-- Address -->
        <TextView
            android:id="@+id/tvCenterAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address: 123 Street, City"
            android:textSize="14sp"
            android:textColor="@color/colorDarkGray"
            android:layout_marginBottom="4dp"/>

        <!-- Contact -->
        <TextView
            android:id="@+id/tvCenterContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: +1234567890"
            android:textSize="14sp"
            android:textColor="@color/colorDarkGray"
            android:layout_marginBottom="4dp"/>

        <!-- Waste Types -->
        <TextView
            android:id="@+id/tvWasteTypes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waste Types: Plastic, Paper"
            android:textSize="14sp"
            android:textColor="@color/colorDarkGray"
            android:layout_marginBottom="4dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/tvCenterDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: A government-registered recycling hub."
            android:textSize="14sp"
            android:textColor="@color/colorDarkGray"
            android:layout_marginBottom="4dp"/>

        <!-- Working Hours -->
        <TextView
            android:id="@+id/tvCenterWorkingHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Working Hours: 9 AM - 5 PM"
            android:textSize="14sp"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
